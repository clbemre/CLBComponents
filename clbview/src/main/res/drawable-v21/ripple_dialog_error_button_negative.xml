<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/md_red_900">

    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_five" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/md_red_900" />
                    <solid android:color="@color/md_red_900" />
                </shape>
            </item>

            <item android:state_activated="true">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_five" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/md_red_900" />
                    <solid android:color="@color/md_red_900" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_five" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/md_red_400" />
                    <solid android:color="@color/md_red_400" />
                </shape>
            </item>
        </selector>
    </item>


</ripple>